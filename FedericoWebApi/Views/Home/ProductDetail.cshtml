@{
    ViewBag.Title = "Product Detail";
}
<h2>@ViewBag.Title.</h2>
<div class="text-warning">
    <h4>@ViewBag.Message</h4>
</div>
<div class="container">
    @using(Html.BeginForm("AddToOrder","Home",FormMethod.Post)) {
        <div class="col-sm-4">
            @ViewBag.prodotto.Codice 
        </div>
        <div class="col-sm-4">
            @ViewBag.prodotto.Descrizione
        </div>
        <div class="col-sm-4">
            <input type="hidden" name="codice" value="@ViewBag.prodotto.Codice" />
            @Html.TextBox("qta",null,new { placeholder = "quantita da ordinare" })
            <input type="submit" value="Aggiungi a carrello">
        </div>
    }
</div>
