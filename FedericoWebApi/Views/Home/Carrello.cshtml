@{
    ViewBag.Title = "Carrello";
}
<h2>@ViewBag.Title.</h2>
<div class="text-warning">
    <h4>@ViewBag.Message</h4>
</div>
<div class="container">

    <ul class="list-group">
        @foreach(var product in ViewBag.prodotti) {
            <li class="list-group-item">
                @product.Codice - @product.Descrizione - @product.RequestQty
            </li>
        }
    </ul>
    <a class="btn btn-primary" href="/Home/SendRequest" role="button">Invia</a>
</div>